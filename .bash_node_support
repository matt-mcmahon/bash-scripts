#!/bin/bash

# Using Deno?
DENO_BIN="$HOME/.local/bin/"
if [ -f "$DENO_BIN/deno" ]; then
  export PATH="$DENO_BIN:$HOME/.deno/bin:$PATH"
fi

# Using Node Version __Switcher__
NVS_DIR="$HOME/.nvs"
if [ -d "$NVS_DIR" ]; then
  export NVS_DIR
  [ -s "$NVS_DIR/nvs.sh" ] && . "$NVS_DIR/nvs.sh"
fi

# Using Node Version __Manager__
NVM_DIR="$HOME/.nvm"
if [ -d "$NVM_DIR" ]; then
  export NVM_DIR
  [ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"                    # This loads nvm
  [ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
fi

# Volta Node Manager
VOLTA_HOME="$HOME/.volta"
if [ -d "$VOLTA_HOME" ]; then
    export VOLTA_HOME
    PATH="$VOLTA_HOME/bin:$PATH"
fi

# Which Package Manager?
npm_execpath="$(which pnpm)"
if [[ $npm_execpath ]]; then
  alias pm="pnpm"
  alias px="pnpx"
else
  npm_execpath=$(which npm)
  alias pm="npm"
  alias px="npx"
fi
export npm_execpath
